<div class="flyntComponent {{ options.theme }}" is="flynt-sponsor-grid">
  <div class="container">
    <div class="row">
      <div class="col-3">
        {% if preContentHtml %}
          <div class="preContent {{textAlignment}}">
            {{ preContentHtml|e('wp_kses_post') }}
          </div>
        {% endif %}
      </div>
      <div class="col-8">
        <ul class="grid grid--columns">
          {% for item in items %}
            {% if item.image or item.contentHtml %}
              <li class="grid-item">
                <a href="{{ item.link }}" target="_blank">
                  {% if item.image %}
                    <img class="content-image lazyload {{ item.image_icon ? 'iconImage' }}"
                         src="{{ item.image.src }}"
                         alt="{{ item.image.alt|e }}">
                  {% endif %}
                  {% if item.contentHtml %}
                    <div class="content-inner {{ options.card == 'layoutCard' ? 'boxPadding' }}">
                      {{ item.contentHtml|e('wp_kses_post') }}
                    </div>
                  {% endif %}
                </a>
              </li>
            {% endif %}
          {% endfor %}
        </ul>
      </div>
    </div>


  </div>
</div>
