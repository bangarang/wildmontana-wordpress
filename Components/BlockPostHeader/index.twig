          </svg>
          {% if post.thumbnail.caption  %}<span class="caption">{{ post.thumbnail.caption }}</span>{% endif %}
          {% if post.thumbnail.meta('photographer_name')  %}
            {% if post.thumbnail.meta('photographer_link')  %}<a href="{{ post.thumbnail.meta('photographer_link') }}" target="_blank">{% endif %}
            <span class="photographer_name">(photo by {{ post.thumbnail.meta('photographer_name') }})</span>
            {% if post.thumbnail.meta('photographer_link')  %}</a>{% endif %}
          {% endif %}
        </div>
      {% endif %}

      {% if post.thumbnail.meta('photographer_name') or post.thumbnail.caption  %}
        <div class="container" style="z-index: 2;">
          <div class="mobile_photographer_caption">
            <svg xmlns="http://www.w3.org/2000/svg" width="16.758" height="14.364" viewBox="0 0 16.758 14.364">
              <path id="Path_15460" data-name="Path 15460" d="M27.386,26l-.9,2.394H24.394A2.389,2.389,0,0,0,22,30.788V37.97a2.389,2.389,0,0,0,2.394,2.394h11.97a2.389,2.389,0,0,0,2.394-2.394V30.788a2.389,2.389,0,0,0-2.394-2.394H34.269L33.371,26Zm2.992,4.189a4.189,4.189,0,1,1-4.189,4.189A4.2,4.2,0,0,1,30.379,30.189Zm0,1.8a2.394,2.394,0,1,0,2.394,2.394A2.38,2.38,0,0,0,30.379,31.985Z" transform="translate(-22 -26)" fill="#fff"/>
            </svg>
            {% if post.thumbnail.caption  %}<span class="caption">{{ post.thumbnail.caption }}</span>{% endif %}
            {% if post.thumbnail.meta('photographer_name')  %}
              {% if post.thumbnail.meta('photographer_link')  %}<a href="{{ post.thumbnail.meta('photographer_link') }}" target="_blank">{% endif %}
              <span class="photographer_name">(photo by {{ post.thumbnail.meta('photographer_name') }})</span>
              {% if post.thumbnail.meta('photographer_link')  %}</a>{% endif %}
            {% endif %}
          </div>
        </div>
      {% endif %}

      <div class="gradientOverlay"></div>

      {% set gif = post.thumbnail.post_mime_type == 'image/gif' %}
      <img class="figure-image {{ not gif ? 'lazyload' }}"
           src="{{ not gif ? post.thumbnail.src|resizeDynamic(800) : post.thumbnail.src }}"
        {% if not gif %}
          srcset="{{ placeholderImage(800, 800 / post.thumbnail.aspect) }}"
          data-srcset="
            {{ post.thumbnail.src|resizeDynamic(1920) }} 1920w,
            {{ post.thumbnail.src|resizeDynamic(1440) }} 1440w,
            {{ post.thumbnail.src|resizeDynamic(1320) }} 1320w,
            {{ post.thumbnail.src|resizeDynamic(1024) }} 1024w,
            {{ post.thumbnail.src|resizeDynamic(800) }} 800w,
            {{ post.thumbnail.src|resizeDynamic(600) }} 600w,
            {{ post.thumbnail.src|resizeDynamic(375) }} 375w"
          data-sizes="auto"
        {% endif %}
           alt="{{ post.thumbnail.alt|e }}">
    </div>
