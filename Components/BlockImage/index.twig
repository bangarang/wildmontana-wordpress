<div class="flyntComponent flyntComponent--{{ options.size }} {{ options.theme }} {{ options.no_margin == true ? '' : 'componentSpacing' }}" is="flynt-top-section">
  <div class="backgroundImageContainer{% if options.solid_color_background == true  %} solid_color_background{% endif %}">
    <div class="container">
      {% if options.news_center %}
        <div class="row">
          <div class="col-md-7">
            <div class="content--{{textAlignment}}">
              <h1>News Center</h1>
              <h3>{{ featured.title }}</h3>
              <h5>{{ featured.subheadline }}</h5>
              <a href="{{ featured.link }}" class="learn-more-button">
                <span>Learn More</span>
                <svg xmlns="http://www.w3.org/2000/svg" width="30.895" height="10.723" viewBox="0 0 30.895 10.723">
                  <g id="Componente_3_51" data-name="Componente 3 – 51" transform="translate(1.5)">
                    <path id="Trazado_115" data-name="Trazado 115" d="M943,5328.771h19.892" transform="translate(-943 -5323.409)" fill="none" stroke="#fffefa" stroke-linecap="round" stroke-width="3"/>
                    <path id="Trazado_125" data-name="Trazado 125" d="M4.765.345a.689.689,0,0,1,1.194,0L10.63,8.47a.689.689,0,0,1-.6,1.032H.69a.689.689,0,0,1-.6-1.032Z" transform="translate(29.395 0) rotate(90)" fill="#fffefa"/>
                  </g>
                </svg>
              </a>
            </div>
          </div>
        </div>
        {% else %}
          <div class="content--{{textAlignment}}">
            {% if headline %}<h1>{{ headline }}</h1>{% endif %}
            {% if subheadline %}<h3>{{ subheadline }}</h3> {% endif %}
          </div>
        {% endif %}
    </div>
    {% if notificationActive %}
    <div class="notificationWrapper">
      <div class="container">
        <a href="{% if notificationLink %}{{ notificationLink }}{% endif %}" class="notificationBlock">
          <div class="notificationTop">
            {% if notificationHeadline %}<h4 class="sans">{{ notificationHeadline }}</h4>{% endif %}
            {% if notificationDescription %}<p>{{ notificationDescription }}</p>{% endif %}
          </div>
          <div class="notifiicationBottom">
            <div class="learn-more-button">
              {% if notificationLinkText %}<span>{{ notificationLinkText }}</span>{% endif %}
              <svg xmlns="http://www.w3.org/2000/svg" width="30.895" height="10.723" viewBox="0 0 30.895 10.723">
                <g id="Componente_3_51" data-name="Componente 3 – 51" transform="translate(1.5)">
                  <path id="Trazado_115" data-name="Trazado 115" d="M943,5328.771h19.892" transform="translate(-943 -5323.409)" fill="none" stroke="#fffefa" stroke-linecap="round" stroke-width="3"/>
                  <path id="Trazado_125" data-name="Trazado 125" d="M4.765.345a.689.689,0,0,1,1.194,0L10.63,8.47a.689.689,0,0,1-.6,1.032H.69a.689.689,0,0,1-.6-1.032Z" transform="translate(29.395 0) rotate(90)" fill="#fffefa"/>
                </g>
              </svg>
            </div>
          </div>
        </a>

      </div>
    </div>
    {% endif %}
    {% if image.meta('photographer_name') or image.caption  %}
    <div class="photographer_caption">
      <svg xmlns="http://www.w3.org/2000/svg" width="16.758" height="14.364" viewBox="0 0 16.758 14.364">
        <path id="Path_15460" data-name="Path 15460" d="M27.386,26l-.9,2.394H24.394A2.389,2.389,0,0,0,22,30.788V37.97a2.389,2.389,0,0,0,2.394,2.394h11.97a2.389,2.389,0,0,0,2.394-2.394V30.788a2.389,2.389,0,0,0-2.394-2.394H34.269L33.371,26Zm2.992,4.189a4.189,4.189,0,1,1-4.189,4.189A4.2,4.2,0,0,1,30.379,30.189Zm0,1.8a2.394,2.394,0,1,0,2.394,2.394A2.38,2.38,0,0,0,30.379,31.985Z" transform="translate(-22 -26)" fill="#fff"/>
      </svg>
      {% if image.caption  %}<span class="caption">{{ image.caption }}</span>{% endif %}
      {% if image.meta('photographer_name')  %}
        {% if image.meta('photographer_link')  %}<a href="{{ image.meta('photographer_link') }}" target="_blank">{% endif %}
        <span class="photographer_name">(photo by {{ image.meta('photographer_name') }})</span>
        {% if image.meta('photographer_link')  %}</a>{% endif %}
      {% endif %}
    </div>
    {% endif %}
    {% if options.solid_color_background == false  %}
    <div class="gradientOverlay"></div>
    {% endif %}

    {% set gif = image.post_mime_type == 'image/gif' %}
    {% if options.solid_color_background == true  %}
      <img class="transparent_logo_background" src="{{ theme.link }}/assets/images/transparent_logo_background.png" alt="">
    {% else %}
      {% if options.news_center  %}
        <img class="figure-image {{ not gif ? 'lazyload' }}{{ mobile_image ? ' desktop-image' }}"
             src="{{ featured_background }}"
             style="object-position: {{ horizontal }} {{ vertical }}"
             alt="{{ image.alt|e }}">
             {% if mobile_image %}
                     <img class="figure-image {{ not gif ? 'lazyload' }} mobile-image"
             src="{{ featured_background }}"
             style="object-position: {{ horizontal }} {{ vertical }}"
             alt="{{ image.alt|e }}">
             {% endif %}
      {% else  %}
        <img class="figure-image {{ not gif ? 'lazyload' }}{{ mobile_image ? ' desktop-image' }}"
        src="{{ not gif ? image.src|resizeDynamic(800) : image.src }}"
        style="object-position: {{ horizontal }} {{ vertical }}"
        {% if not gif %}
          srcset="{{ placeholderImage(800, 800 / image.aspect) }}"
          data-srcset="
            {{ image.src|resizeDynamic(1920) }} 1920w,
            {{ image.src|resizeDynamic(1440) }} 1440w,
            {{ image.src|resizeDynamic(1320) }} 1320w,
            {{ image.src|resizeDynamic(1024) }} 1024w,
            {{ image.src|resizeDynamic(800) }} 800w,
            {{ image.src|resizeDynamic(600) }} 600w,
            {{ image.src|resizeDynamic(375) }} 375w"
          data-sizes="auto"
        {% endif %}
        alt="{{ image.alt|e }}">
        {% if mobile_image %}
        <img class="figure-image {{ not gif ? 'lazyload' }} mobile-image"
        src="{{ not gif ? mobile_image.src|resizeDynamic(800) : mobile_image.src }}"
        style="object-position: {{ horizontal }} {{ vertical }}"
        {% if not gif %}
          srcset="{{ placeholderImage(800, 800 / mobile_image.aspect) }}"
          data-srcset="
            {{ mobile_image.src|resizeDynamic(1920) }} 1920w,
            {{ mobile_image.src|resizeDynamic(1440) }} 1440w,
            {{ mobile_image.src|resizeDynamic(1320) }} 1320w,
            {{ mobile_image.src|resizeDynamic(1024) }} 1024w,
            {{ mobile_image.src|resizeDynamic(800) }} 800w,
            {{ mobile_image.src|resizeDynamic(600) }} 600w,
            {{ mobile_image.src|resizeDynamic(375) }} 375w"
          data-sizes="auto"
        {% endif %}
        alt="{{ image.alt|e }}">
        {% endif %}
      {% endif %}
    {% endif %}
  </div>
  {% if image.meta('photographer_name') or image.caption  %}
    <div class="container">
      <div class="mobile_photographer_caption">
        <svg xmlns="http://www.w3.org/2000/svg" width="16.758" height="14.364" viewBox="0 0 16.758 14.364">
          <path id="Path_15460" data-name="Path 15460" d="M27.386,26l-.9,2.394H24.394A2.389,2.389,0,0,0,22,30.788V37.97a2.389,2.389,0,0,0,2.394,2.394h11.97a2.389,2.389,0,0,0,2.394-2.394V30.788a2.389,2.389,0,0,0-2.394-2.394H34.269L33.371,26Zm2.992,4.189a4.189,4.189,0,1,1-4.189,4.189A4.2,4.2,0,0,1,30.379,30.189Zm0,1.8a2.394,2.394,0,1,0,2.394,2.394A2.38,2.38,0,0,0,30.379,31.985Z" transform="translate(-22 -26)" fill="#fff"/>
        </svg>
        {% if image.caption  %}<span class="caption">{{ image.caption }}</span>{% endif %}
        {% if image.meta('photographer_name')  %}
          {% if image.meta('photographer_link')  %}<a href="{{ image.meta('photographer_link') }}" target="_blank">{% endif %}
          <span class="photographer_name">(photo by {{ image.meta('photographer_name') }})</span>
          {% if image.meta('photographer_link')  %}</a>{% endif %}
        {% endif %}
      </div>
    </div>
    {% endif %}
</div>
