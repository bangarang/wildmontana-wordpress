
<div class="flyntComponent componentSpacing {{ options.theme }}" is="flynt-author-archive">
  <div class="container">
    <div class="author-top">
      <div class="row">
        <div class="col-md-5">
          <div class="staff-image">
            <img src="{{ Image(staff.photo).src }}"  alt="" />
          </div>
        </div>
        <div class="col-md-7">

          <h3><a href="{{ staff.link }}">{{ staff.first_name }} {{ staff.last_name }}</a></h3>
          <h6 class="sans">{{ staff.title }}</h6>
          {% if staff.location %}
          <div class="staff-contact-item">
            <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="14.496" height="19.676" viewBox="0 0 14.496 19.676">
              <defs>
                <clipPath id="clip-path">
                  <path id="Path_19145" data-name="Path 19145" d="M0,12.558H14.5V-7.118H0Z" transform="translate(0 7.118)" fill="#9d484b"/>
                </clipPath>
              </defs>
              <g id="Group_494" data-name="Group 494" transform="translate(0 7.118)">
                <g id="Group_493" data-name="Group 493" transform="translate(0 -7.118)" clip-path="url(#clip-path)">
                  <g id="Group_490" data-name="Group 490" transform="translate(0 0.001)">
                    <path id="Path_19142" data-name="Path 19142" d="M4.626,0A7.248,7.248,0,0,0-2.622,7.248c0,4.005,7.248,12.428,7.248,12.428s7.248-8.423,7.248-12.428A7.248,7.248,0,0,0,4.626,0m0,10.924A3.887,3.887,0,1,1,8.51,7.035a3.885,3.885,0,0,1-3.884,3.889" transform="translate(2.622)" fill="#9d484b"/>
                  </g>
                  <g id="Group_491" data-name="Group 491" transform="translate(3.129 2.954)">
                    <path id="Path_19143" data-name="Path 19143" d="M2.629,5.259A4.12,4.12,0,1,0-1.49,1.14,4.118,4.118,0,0,0,2.629,5.259" transform="translate(1.49 2.981)" fill="#9d484b"/>
                  </g>
                  <g id="Group_492" data-name="Group 492" transform="translate(3.129 2.954)">
                    <path id="Path_19144" data-name="Path 19144" d="M2.629,5.259A4.12,4.12,0,1,0-1.49,1.14,4.118,4.118,0,0,0,2.629,5.259Z" transform="translate(1.49 2.981)" fill="#fffefa"/>
                  </g>
                </g>
              </g>
            </svg>
            {{ staff.location }}
          </div>
          {% endif %}
          {% if staff.phone %}
          <div class="staff-contact-item">
            <svg class="phone-icon" xmlns="http://www.w3.org/2000/svg" width="29.988" height="32.701" viewBox="0 0 29.988 32.701">
              <g id="Group_495" data-name="Group 495" transform="translate(-17.67 14.049) rotate(-30)">
                <path id="Path_19146" data-name="Path 19146" d="M36.577,27.773,33.942,23.21a1.54,1.54,0,0,0-2.117-.462L29.492,24.1c-2.875-1.906-5.809-6.987-6.022-10.429L25.8,12.319a1.54,1.54,0,0,0,.659-2.064L23.828,5.692a1.539,1.539,0,0,0-2.117-.461L19.273,6.638c-4.026,2.324-.125,12.116,1.763,15.387s8.418,11.545,12.443,9.22l2.439-1.408A1.54,1.54,0,0,0,36.577,27.773Z" transform="translate(0 0)" fill="#9d484b" fill-rule="evenodd"/>
              </g>
            </svg>
            {{ staff.phone }}
          </div>
          {% endif %}
          {% if staff.email %}
          <div class="staff-contact-item">
            <svg id="Email" xmlns="http://www.w3.org/2000/svg" width="25.3" height="16.117" viewBox="0 0 25.3 16.117">
              <path id="Path_15486" data-name="Path 15486" d="M10.851,24a1.842,1.842,0,0,0-.685.136l10.741,9.182a1.041,1.041,0,0,0,1.466,0l10.751-9.192A1.854,1.854,0,0,0,32.449,24ZM9.019,25.588A1.915,1.915,0,0,0,9,25.86v12.4a1.851,1.851,0,0,0,1.851,1.86h21.6a1.851,1.851,0,0,0,1.851-1.86V25.86a1.962,1.962,0,0,0-.019-.271l-10.7,9.143a3,3,0,0,1-3.876,0Z" transform="translate(-9 -24)" fill="#9d484b"/>
            </svg>
            {{ staff.email }}
          </div>
          <hr>
          {% endif %}
          {% if staff.long_description %}
          <div class="long_description">
            {{ staff.long_description }}
          </div>
          {% endif %}

        </div>
      </div>
    </div>

    <div class="row">
      <div class="col">
        <h5 class="sans red">Articles by {{ staff.first_name }}</h5>
      </div>
    </div>

    <div class="posts row">
      {% for post in posts %}
        <div class="col-md-6 post">
          <a class="post-link" href="{{ post.link }}">
            {% if post.thumbnail %}
              <figure class="figure">
                <img class="figure-image lazyload"
                  src="{{ post.thumbnail.src|resizeDynamic(424, 283) }}"
                  srcset="{{ placeholderImage(3, 2) }}"
                  data-srcset="
                    {{ post.thumbnail.src|resizeDynamic(1920, 1280) }} 1920w,
                    {{ post.thumbnail.src|resizeDynamic(1320, 880) }} 1320w,
                    {{ post.thumbnail.src|resizeDynamic(1280, 853) }} 1280w,
                    {{ post.thumbnail.src|resizeDynamic(1050, 700) }} 1050w,
                    {{ post.thumbnail.src|resizeDynamic(750, 500) }} 750w,
                    {{ post.thumbnail.src|resizeDynamic(600, 400) }} 600w,
                    {{ post.thumbnail.src|resizeDynamic(424, 283) }} 424w,
                    {{ post.thumbnail.src|resizeDynamic(312, 208) }} 312w"
                  data-sizes="auto"
                  alt="{{ post.title }}">
              </figure>
            {% endif %}
          </a>
          <div class="post-inner">
            <h2 class="h3 post-title">{{ post.title }}</h2>
            <p class="post-excerpt">{{ post.preview.read_more(false) }}</p>
            <a class="button button--link" href="{{ post.link }}" title="{{ post.title }}" aria-hidden="true" tabindex="-1">
              Read More
            </a>
          </div>
        </div>
      {% else %}
        <p class="posts-empty">{{ labels.noPostsFound }}</p>
      {% endfor %}
    </div>
    {% set pagination = posts.pagination %}
    {% if pagination.pages %}
      {% include 'Partials/_paginationButtons.twig' %}
    {% endif %}
  </div>
</div>
<section>
  <h2>Hello</h2>
  {{ renderComponent('BlockForm', {'contentHtml': '<h2>' ~ __('Stay Connected') ~ '</h2>','gravity_form_id': 1, 'options': {'theme': 'themeYellow', 'columns': 1}}) }}
</section>
