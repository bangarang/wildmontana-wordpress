  <div class="red_buttons">
    {% if sub_menu %}
      {% for item in sub_menu.items %}
        <a class="red_button" href="{{ item.link }}" {{ item.target == '_blank' ? 'target="_blank" rel="noopener noreferrer"' }}>{{ item.title }}</a>
      {% endfor %}
    {% endif %}
  </div>
</div>

